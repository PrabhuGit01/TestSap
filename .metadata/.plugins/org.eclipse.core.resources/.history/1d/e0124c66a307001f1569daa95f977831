package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.PageFactory;
import org.openqa.selenium.WebElement; 
import org.openqa.selenium.support.FindBy; 
import org.openqa.selenium.support.How; 

public class HomePage { 
	  
    WebDriver driver;
    By accordianMenu = By.xpath("//*[@id='sidebar']/aside/*[text()='Widgets']/../ul/li//*[text()='Accordion']");
  	By sectionMenu = By.xpath("//*[@id='accordion']/h3[text()='Section 2']");
  	
    public HomePage(WebDriver driver) { 
        this.driver = driver; 
    } 
  

  
    // Defining all the user actions (Methods) 

  
     // This method is to set Password in the password text box 
    public void clickSectionMenu() { 
    	this.driver.findElement(sectionMenu).click();
        } 
      // This method is to click on Next Button 
    public void clickAccordianMenu() { 
    	this.driver.findElement(accordianMenu).click();
    } 
} 
